# Banco de dados (SQLite local por padrão)
DATABASE_URL=sqlite+aiosqlite:///./dev.db

# Autenticação / JWT
SECRET_KEY=change_me_to_a_strong_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# GenAI (google.genai) - se estiver usando a API externa
# Defina GENAI_API_KEY com sua chave. Em testes você pode apontar GENAI_API_URL para um mock local.
GENAI_API_KEY=
GENAI_API_URL=
GENAI_MODEL=gemma-3-1b-it

# Celery (opcional)
USE_CELERY=false
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOW_CREDENTIALS=true
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*